@page "/"

<PageTitle>Panel General</PageTitle>

<div class="container my-5">
    <!-- Encabezado -->
    <div class="text-center mb-3">
        <h1 class="display-5 fw-bold">Sistema de Gestión de Inventario de TI</h1>
        <p class="text-muted">Administra, controla y organiza tus equipos de TI de manera eficiente.</p>
    </div>

    <!-- Sección de información destacada -->
    <div class="row text-center mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-box"></i> Total de Equipos</h5>
                    <h3 class="fw-bold">124</h3>
                    <p class="text-muted">Equipos registrados en el inventario.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-warning"><i class="bi bi-person"></i> Asignaciones</h5>
                    <h3 class="fw-bold">78</h3>
                    <p class="text-muted">Equipos asignados actualmente.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-danger"><i class="bi bi-tools"></i> Mantenimientos</h5>
                    <h3 class="fw-bold">12</h3>
                    <p class="text-muted">Pendientes de revisión.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Tips y Sugerencias -->
    <div class="row">
        <div class="col-md-7">
            <div class="card border-light shadow-sm">
                <div class="card-header bg-primary text-white fw-bold">Sugerencias para la Gestión</div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success"></i> Realiza auditorías mensuales del inventario.</li>
                        <li><i class="bi bi-check-circle text-success"></i> Mantén actualizado el estado de los equipos.</li>
                        <li><i class="bi bi-check-circle text-success"></i> Configura notificaciones para mantenimientos pendientes.</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card border-light shadow-sm">
                <div class="card-header bg-warning text-dark fw-bold">Accesos Rápidos</div>
                <div class="card-body d-flex flex-wrap">
                    <a href="/equipos" class="btn btn-outline-dark me-2 mb-2"><i class="bi bi-box"></i> Ver Laboratorios</a>
                    <a href="/equipos" class="btn btn-outline-primary me-2 mb-2"><i class="bi bi-box"></i> Ver Equipos</a>
                    <a href="/asignaciones" class="btn btn-outline-info me-2 mb-2"><i class="bi bi-person"></i> Gestión de Asignaciones</a>
                    <a href="/mantenimientos" class="btn btn-outline-danger me-2 mb-2"><i class="bi bi-tools"></i> Revisar Mantenimientos</a>
                    <a href="/notificaciones" class="btn btn-outline-success me-2 mb-2"><i class="bi bi-bell"></i> Notificaciones</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer con créditos -->
    <footer class="mt-5 text-center text-muted">
        <p>Desarrollado con <i class="bi bi-heart-fill text-danger"></i> por el equipo de <b>NotBugs</b>.</p>
    </footer>
</div>

